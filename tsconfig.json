{
  "compilerOptions": {
    "target": "es2016",
    "jsx": "react",
    "module": "commonjs",
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": false,
    "strict": true,
    "types": ["jest", "@types/testing-library__jest-dom"],
  },
  "exclude": ["node_modules", "cypress", "cypress.config.ts"]
}
